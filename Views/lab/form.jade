extends ../layouts/default


block main
  h1= title
  hr

block content
  - var action = '/labs'
  
  form.form-horizontal(method="post", action=action, enctype="multipart/form-data")
    input(type='hidden', name='_csrf', value="#{csrf_token}")
    
    .control-group
      label.control-label(for='pat_name') Patient Name
      .controls
        input.input-large#pat_name(type='text', name="pat_name", placeholder='Patient Name')

    .control-group
      label.control-label(for='doc_name') Doctor Name
      .controls
        input.input-large#doc_name(type='text', name="doc_name", placeholder='Doctor Name')


    .control-group
      label.control-label(for='blood') Blood Group
      .controls
        select#blood(name="blood")
          option(value='A+') A+
          option(value='A-') A-
          option(value='B+') B+
          option(value='B-') B-
          option(value='AB+') AB+
          option(value='AB-') AB-
          option(value='O+') O+
          option(value='O-') O-

    .control-group
      label.control-label(for='haemo') Haemoglobin
      .controls
        input.input-small#haemo(type='text', name="haemo", placeholder='Haemoglobin')
        label gm/dL
      

    .control-group
      label.control-label(for='sugar') Sugar Level
      .controls
        input.input-small#sugar(type='text', name="sugar", placeholder='Sugar Level')
        label mmol/l


    .control-group
      label.control-label(for='bp') Blood Pressure
      .controls
        input.input-small#bp(type='text', name="bp", placeholder='Blood Pressure')

    .form-actions
      button.btn.btn-primary(type='submit') Save changes
      &nbsp;&nbsp;&nbsp;
      a.btn(href="/labs", title="cancel") Cancel
